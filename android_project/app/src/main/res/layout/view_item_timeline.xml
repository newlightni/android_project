<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLighGray"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/view_line_1"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/colorMain" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_tip"
                android:checked="true" />

            <ImageView
                android:id="@+id/image_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/arraw_left"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="2dp"
            android:text="2017/2/10" />

        <View
            android:id="@+id/view_line_2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorMain"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/relative_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/shape_img_bg"
        android:elevation="2dp"
        android:minHeight="40dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/line_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="@dimen/font_12" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_top"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="7"
            android:text="caodincojvncsaccassckdnjdscnkjdscnjkdcnksdjcnksjdndcjkdsncndlscnlanclkcnksnlacnkalansclnldsnclascnkdlnslsncldsnkc"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="开始：2017/04/12 周三 15:15\n结束：2017/04/12 周三 15:15"
                android:textColor="@color/colorHotGray" />

            <TextView
                android:id="@+id/txt_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:drawableLeft="@drawable/local"
                android:drawableStart="@drawable/local"
                android:text="上海" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>