<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorMain"
        android:elevation="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_record_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="添加课程"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_16"/>
        </LinearLayout>

        <TextView
            android:id="@+id/course_add_finish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <EditText
        android:id="@+id/course_add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorTransparent"
        android:hint="课程名称"
        android:padding="10dp"
        android:textColor="@color/colorTextOne"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorHotGray"/>

    <EditText
        android:id="@+id/course_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorTransparent"
        android:hint="授课地点"
        android:padding="10dp"
        android:textColor="@color/colorTextOne"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorHotGray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="学期"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_16"/>

        <TextView
            android:id="@+id/course_add_term"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:padding="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorHotGray"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"/>

    <EditText
        android:id="@+id/course_add_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/colorTransparent"
        android:gravity="top"
        android:hint="内容"
        android:lineSpacingMultiplier="1.2"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/line_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_edit"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/edit"
            android:gravity="center"
            android:text="编辑"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/txt_delete"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/delete"
            android:gravity="center"
            android:text="删除"
            android:textSize="@dimen/font_12" />
    </LinearLayout>


</LinearLayout>